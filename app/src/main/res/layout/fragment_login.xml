<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context=".fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        >

        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/splash_logo"
            android:layout_margin="@dimen/_22sdp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Log In"
                android:textColor="@color/theme"
                android:textSize="@dimen/_30sdp" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Email Address"
            android:textColor="@color/text_grey" />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:layout_marginHorizontal="@dimen/_32sdp"
            android:hint="Enter your Email addresss"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_14sdp"
            android:textColorHint="#787878"
            android:textSize="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Password"
            android:textColor="@color/text_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_32sdp"
            >

            <EditText
                android:id="@+id/et_login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:hint="Enter your Password"
                android:paddingStart="@dimen/_14sdp"
                android:textColorHint="#787878"
                android:textSize="@dimen/_10sdp"
                android:inputType="textWebPassword"
                android:paddingEnd="@dimen/_16sdp"
                />

            <ImageButton
                android:id="@+id/ib_show_pass"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_5sdp"
                android:contentDescription="@string/desc"
                android:src="@drawable/eye_open"
                android:layout_marginStart="-35dp"
                android:background="@color/white"
                />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/theme"
            android:layout_marginStart="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_8sdp"
            />

        <TextView
            android:id="@+id/tv_log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32sdp"
            android:background="@drawable/tv_button_bg"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Log In"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not registered yet? "
                android:fontFamily="@font/poppins"
                />

            <TextView
                android:id="@+id/tv_create_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account"
                android:textColor="@color/theme"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            >

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="#E8E8E8"
                >

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:layout_marginHorizontal="@dimen/_12sdp"
                />


            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="#E8E8E8"
                >

            </View>




        </LinearLayout>

        <TextView
            android:id="@+id/tv_continue_with_google_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/et_bg"
            android:paddingStart="@dimen/_10sdp"
            android:drawableStart="@drawable/google"
            android:text="Continue with google"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_continue_with_fb_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/et_bg"
            android:paddingStart="@dimen/_10sdp"
            android:drawableStart="@drawable/fb"
            android:text="Continue with google"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            />

    </LinearLayout>

</ScrollView>