<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.SelectTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/theme_dark"
            android:text="Insight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fulPath"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/light_theme_dark"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Choose Your Path"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/theme_dark"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_32sdp"

        >
        
        <TextView
            android:id="@+id/tv_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_tv_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Parent"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:gravity="center"
            android:textColor="@color/theme_dark"
            android:textSize="@dimen/_16sdp"
            />

        <ImageView
            android:id="@+id/iv_parent"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/image_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_8sdp"

        >

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_tv_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Teacher"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:gravity="center"
            android:textColor="@color/theme_dark"
            android:textSize="@dimen/_16sdp"
            />

        <ImageView
            android:id="@+id/iv_teacher"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/image_teacher"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_8sdp"

        >

        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_tv_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Doctor"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:gravity="center"
            android:textColor="@color/theme_dark"
            android:textSize="@dimen/_16sdp"
            />

        <ImageView
            android:id="@+id/iv_doctor"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/image_doctor"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:textColor="@color/light_theme_dark"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:textAlignment="center"
        android:text="Empowering Children Through Playful Learning and Emotional Intelligence Insights"
        />


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_bg"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:text="Next"
        android:layout_marginTop="@dimen/_32sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        />



</LinearLayout>