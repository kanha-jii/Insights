<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/screen_bg"

    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.SplashFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/theme_dark"
            android:text="Insight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fulPath"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/light_theme_dark"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Empower Young Minds, "
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/theme_dark"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai_2_medium"
        android:gravity="center"
        android:text="One Emotion at a Time"
        android:textColor="@color/light_theme_dark"
        android:textSize="@dimen/_14sdp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/material_motion_duration_long_1"
        android:src="@drawable/splash_image"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai_2_medium"
        android:gravity="center"
        android:text="Empowering Children Through Playful Learning and Emotional Intelligence Insights"
        android:textStyle="bold"
        android:textColor="@color/light_theme_dark"
        android:textSize="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        />



    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_bg"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:text="Start Learning"
        android:layout_marginTop="@dimen/_32sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        />


</LinearLayout>